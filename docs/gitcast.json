---
layout: none
cast:
  name: podcast
---
{"gitcasts":[
  {%- assign cCount = 0 -%}
  {%- for collection in site.collections -%}{% if collection.gitcast == true %}
    {%- if cCount == 1 -%}{{','}}{%- else -%}{%- assign cCount = 1 -%}{%- endif -%}          
    {
      "name":"{{ collection.label }}", "refreshDates":[
      {%- assign sorted = collection.docs | where_exp: 'date', 'date > now' | sort: 'date' -%}
      {%- for post in sorted -%}
        {%- if pCount == 1 -%}{{','}}{%- else -%}{%- assign pCount = 1 -%}{%- endif -%}          
        "{{ post.date | date: "%Y/%m/%d" | default: '1900/01/01' }}"
      {%- endfor -%}
  ]}
  {%- endif -%}{%- endfor -%}
]}
